{
  "name": "selm-frontend",
  "version": "1.0.0",
  "description": "Frontend interface for SELM project, allowing users to interact with the model and visualize results.",
  "main": "src/index.js",
  "scripts": {
    "start": "react-scripts start",         // Starts the development server
    "build": "react-scripts build",         // Builds the app for production
    "test": "react-scripts test",           // Runs tests
    "eject": "react-scripts eject",         // Ejects from Create React App configuration
    "lint": "eslint src/**/*.js",           // Lints the JavaScript files for style and errors
    "format": "prettier --write src/**/*.js" // Formats code using Prettier
  },
  "dependencies": {
    "react": "^18.0.0",                     // React library for building UI
    "react-dom": "^18.0.0",                 // React library for rendering UI to the DOM
    "react-router-dom": "^6.0.0",           // Routing for React applications
    "axios": "^1.2.0",                      // HTTP client for interacting with backend APIs
    "chart.js": "^3.7.0",                   // Library for visualizing data with charts and graphs
    "react-chartjs-2": "^4.0.0",            // React wrapper for Chart.js
    "recharts": "^2.1.9",                   // Another charting library for visualizing model metrics
    "material-ui": "^5.0.0",                // Material-UI components for UI/UX consistency
    "@emotion/react": "^11.7.0",            // Emotion for styling (used with Material-UI)
    "@emotion/styled": "^11.7.0",           // Styled components for React
    "styled-components": "^5.3.0",          // Library for writing component-level CSS
    "redux": "^4.1.0",                      // State management for React
    "react-redux": "^7.2.4",                // React bindings for Redux
    "redux-thunk": "^2.4.1",                // Middleware for handling async actions in Redux
    "socket.io-client": "^4.4.0",           // Real-time bidirectional event-based communication for model updates
    "dotenv": "^10.0.0"                     // Load environment variables from .env file
  },
  "devDependencies": {
    "eslint": "^8.0.0",                     // ESLint for linting JavaScript
    "eslint-plugin-react": "^7.28.0",       // ESLint plugin for React
    "prettier": "^2.4.1",                   // Prettier for formatting JavaScript
    "react-scripts": "^5.0.0"               // Scripts and configuration used by Create React App
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "author": "SELM Development Team",
  "license": "MIT"
}
